{
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "npm install && npm run build && pip install -r FEBE/backend/requirements.txt"
    },
    "deploy": {
        "startCommand": "python -m uvicorn FEBE.backend.main:app --host 0.0.0.0 --port $PORT --reload",
        "healthcheckPath": "/api/",
        "healthcheckTimeout": 300,
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}