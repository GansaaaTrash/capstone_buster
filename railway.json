{
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "cd FEBE/Frontend && npm install && npm run build && cd ../backend && pip install -r requirements.txt"
    },
    "deploy": {
        "startCommand": "cd FEBE/backend && python -m uvicorn main:app --host 0.0.0.0 --port $PORT",
        "healthcheckPath": "/api/",
        "healthcheckTimeout": 300,
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}