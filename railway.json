{
    "build": {
        "builder": "NIXPACKS"
    },
    "deploy": {
        "startCommand": "cd FEBE/backend && uvicorn main:app --host 0.0.0.0 --port $PORT",
        "healthcheckPath": "/api/",
        "healthcheckTimeout": 100,
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}